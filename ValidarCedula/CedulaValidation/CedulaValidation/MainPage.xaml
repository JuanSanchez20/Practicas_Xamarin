<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CedulaValidation.MainPage">

    <StackLayout Padding="20">
        <Label Text="Ingrese su cédula ecuatoriana:" 
               FontSize="Medium" />
        <Entry x:Name="CedulaEntry" 
               Placeholder="Cédula" 
               Keyboard="Numeric" />
        <Button Text="Validar" 
                Clicked="OnValidarClicked" />
        <Label x:Name="ResultadoLabel" 
               FontSize="Medium" 
               TextColor="Green" 
               HorizontalTextAlignment="Center" />
    </StackLayout>
</ContentPage>
